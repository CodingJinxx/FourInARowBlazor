@using FourInARow.Game
<div class="my-1 cell @(Type == EFieldType.RED ? "red" : Type == EFieldType.BLUE ? "blue" : "")" @onclick="Type == EFieldType.UNKNOWN ? HandleClick : () => { }"/>


@code {
    [Parameter] 
    public EFieldType Type { get; set; }
    
    [Parameter]
    public int X { get; init; }
    
    [Parameter]
    public int Y { get; init; }
    
    [Parameter]
    public Action<int, int> onClick { get; set; }

    private void HandleClick() => onClick(X, Y);
}